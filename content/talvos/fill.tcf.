# MODULE fill.spvasm
# ENTRY fill

BUFFER a 64 UNINIT
#         ^ bytes

DESCRIPTOR_SET 0 0 0 a

DISPATCH 16 1 1
#         ^ work items (here, "elements")

DUMP UINT32 a
#       ^ bits

# NB: a's size and the DISPATCH must agree;
#    i.e. 16 elements == (64 bytes / (32 bits per element / 8 bits per byte))
# a should be filled with the value of %FILL
